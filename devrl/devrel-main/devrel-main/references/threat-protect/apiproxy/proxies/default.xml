<ProxyEndpoint name="default">
    <Flows>
        <Flow name="GET /xml">
            <Condition>(proxy.pathsuffix MatchesPath "/xml") and (request.verb = "GET")</Condition>
            <Request>
                <Step>
                    <Name>AM-XMLThreat</Name>
                </Step>
                <Step>
                    <Name>XSL-GenerateThreats</Name>
                </Step>
                <Step>
                    <Name>AM-SetGETHttpMethod</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>XTP-CheckStructuralLimits</Name>
                </Step>
                <Step>
                    <Condition>xmlattack.failed = "true"</Condition>
                    <Name>RF-BadRequest</Name>
                </Step>
            </Response>
        </Flow>
        <Flow name="GET /json">
            <Condition>(proxy.pathsuffix MatchesPath "/json") and (request.verb = "GET")</Condition>
            <Request>
                <Step>
                    <Name>AM-JSONThreat</Name>
                </Step>
                <Step>
                    <Name>XSL-GenerateThreats</Name>
                </Step>
                <Step>
                    <Name>AM-SetGETHttpMethod</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>X2J-XMLMediation</Name>
                </Step>
                <Step>
                    <Name>JTP-CheckStructuralLimits</Name>
                </Step>
                <Step>
                    <Condition>jsonattack.failed = "true"</Condition>
                    <Name>RF-BadRequest</Name>
                </Step>
            </Response>
        </Flow>
        <Flow name="fallback 404">
            <Request>
                <Step>
                    <Name>RF-404</Name>
                </Step>
            </Request>
        </Flow>
        <PostFlow name="PostFlow">
            <Request/>
            <Response/>
        </PostFlow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/threats/v1</BasePath>
        <Properties/>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>